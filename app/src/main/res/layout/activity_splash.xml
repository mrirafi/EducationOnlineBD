<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:orientation="vertical"
    android:background="@drawable/three_color"
    >

    <ImageView
        android:id="@+id/treed"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/treed"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/eduhub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/treed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/boogaloofont"
        android:text="Education BD"
        android:textColor="#6C3E3E"
        android:textSize="40sp" />

    <ProgressBar
        android:layout_width="200sp"
        android:layout_height="40dp"
        android:layout_below="@id/eduhub"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="60sp"
        android:id="@+id/progressBar"
        android:progressTint="#4CAF50"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Developed by"
            android:textColor="#000000"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="-17dp"
            android:src="@drawable/meghpylogo" />
    </LinearLayout>



</RelativeLayout>